<h2>Editing Book</h2>

<% if flash[:error] %>
	<h3 class="error" >Error!</h3>
	<ul>
		<% flash[:error].each do |message| %>
			<li><%= message %></li>
		<% end %>
	</ul>
<% end %>

<%= form_with model: @book do |f| %>
	<h5>Title</h5>
	<div class="text-box"><%= f.text_field :title %></div>
	<h5>Body</h5>
	<div class="text-box"><%= f.text_area :body %></div>
	<div class="text-box"><%= f.submit 'Update Book' %></div>
<% end %>

<%= link_to 'Show', book_path(params[:id]) %>
